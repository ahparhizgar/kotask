CREATE TABLE IF NOT EXISTS TaskItemEntity (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    orderNum INTEGER NOT NULL,
    text TEXT NOT NULL,
    isDone INTEGER NOT NULL DEFAULT 0
);
