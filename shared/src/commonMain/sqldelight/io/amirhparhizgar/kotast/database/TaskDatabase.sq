add:
INSERT INTO TaskItemEntity (orderNum, text)
VALUES ((CASE (SELECT COUNT(*) FROM TaskItemEntity) WHEN 0 THEN 1 ELSE (SELECT MAX(orderNum)+1 FROM TaskItemEntity) END), :text);
SELECT last_insert_rowid();

select:
SELECT *
FROM TaskItemEntity
WHERE id = :id;

selectAll:
SELECT *
FROM TaskItemEntity
ORDER BY orderNum;

updateIsDone:
UPDATE TaskItemEntity
SET isDone = :isDone
WHERE id = :id;

